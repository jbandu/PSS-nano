{
  "name": "airline-ops-platform",
  "version": "1.0.0",
  "private": true,
  "description": "Airline Operational Intelligence Platform - Monorepo",
  "workspaces": [
    "packages/*",
    "services/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "start:services": "turbo run start --filter='./services/*'",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "typecheck": "turbo run typecheck",
    "type-check": "turbo run typecheck",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:migrate": "turbo run db:migrate",
    "db:seed": "turbo run db:seed",
    "db:seed:test": "NODE_ENV=test turbo run db:seed",
    "db:studio": "cd packages/database-schemas && npx prisma studio",
    "test": "npm run test:unit && npm run test:integration",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:a11y": "playwright test accessibility.e2e.ts",
    "test:api": "turbo run test:api",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "test:coverage:report": "echo 'Coverage reports generated in coverage/ directories'",
    "test:clear": "jest --clearCache",
    "test:ci": "npm run lint && npm run typecheck && npm run test:unit -- --coverage && npm run test:integration",
    "load:booking": "k6 run load-tests/scenarios/booking-flow.k6.js",
    "load:spike": "k6 run load-tests/scenarios/spike-test.k6.js",
    "load:stress": "k6 run load-tests/scenarios/stress-test.k6.js",
    "load:soak": "k6 run load-tests/scenarios/soak-test.k6.js",
    "security:scan": "npm audit --audit-level=moderate",
    "security:secrets": "echo 'Run: git secrets --scan' or use TruffleHog",
    "generate:perf-report": "echo 'Performance report generation placeholder'"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.2.4",
    "turbo": "^1.12.0",
    "typescript": "^5.3.3"
  },
  "packageManager": "npm@10.2.4",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
