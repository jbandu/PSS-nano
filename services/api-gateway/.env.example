# Server Configuration
NODE_ENV=development
PORT=3000
API_PREFIX=/api/v1

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# OAuth Configuration
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=1000
SLOW_DOWN_WINDOW_MS=60000
SLOW_DOWN_DELAY_AFTER=500
SLOW_DOWN_DELAY_MS=500

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Request Configuration
MAX_BODY_SIZE=10mb
REQUEST_TIMEOUT=30000

# Circuit Breaker Configuration
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=10000
CIRCUIT_BREAKER_RESET_TIMEOUT=30000

# Service Discovery (Consul)
CONSUL_ENABLED=false
CONSUL_HOST=localhost
CONSUL_PORT=8500

# Backend Service URLs
AUTH_URL=http://localhost:3001
RESERVATION_URL=http://localhost:3002
INVENTORY_URL=http://localhost:3003
PAYMENT_URL=http://localhost:3004
NOTIFICATION_URL=http://localhost:3005
FLIGHT_URL=http://localhost:3006
