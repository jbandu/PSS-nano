# Server Configuration
NODE_ENV=development
PORT=3011
SERVICE_NAME=boarding-service

# Database
DATABASE_URL="postgresql://neondb_owner:npg_kp4AVvbJxf9i@ep-steep-rain-a49rnsg4-pooler.us-east-1.aws.neon.tech/neondb?sslmode=require&channel_binding=require&schema=public"

# Database (Local Development - Optional)
# DATABASE_URL="postgresql://user:password@localhost:5432/airline_ops?schema=public"

# Redis (Cache & Real-time)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=8
REDIS_KEY_PREFIX=boarding:

# Socket.io (Real-time Updates)
SOCKET_IO_PORT=3012
SOCKET_IO_CORS_ORIGIN=http://localhost:3000,http://localhost:3009
ENABLE_SOCKET_IO=true
SOCKET_IO_PING_TIMEOUT=60000
SOCKET_IO_PING_INTERVAL=25000

# External Service URLs
DCS_SERVICE_URL=http://localhost:3010
RESERVATION_SERVICE_URL=http://localhost:3002
INVENTORY_SERVICE_URL=http://localhost:3003

# Boarding Configuration
TARGET_SCAN_PROCESSING_TIME_MS=2000
ENABLE_DUPLICATE_PREVENTION=true
DUPLICATE_SCAN_TIMEOUT_SECONDS=300
ENABLE_SEAT_VERIFICATION=true
ENABLE_PRIORITY_ENFORCEMENT=true
ENABLE_SPECIAL_NEEDS_FLAGGING=true

# Boarding Zones
ENABLE_ZONE_BASED_BOARDING=true
DEFAULT_BOARDING_ZONES=5
ZONE_SEQUENCE=premium,elite,priority,general,basic
ENABLE_FAMILY_BOARDING=true
FAMILY_BOARDING_ZONE=2

# Priority Boarding
PRIORITY_GROUPS=first,business,premium_economy,elite_platinum,elite_gold,elite_silver,disability,family,military
FIRST_CLASS_ZONE=1
BUSINESS_CLASS_ZONE=1
PREMIUM_ECONOMY_ZONE=2
DISABILITY_PRIORITY=true
MILITARY_PRIORITY=true

# Gate Management
ENABLE_LAST_MINUTE_SEAT_CHANGES=true
ENABLE_STANDBY_PROCESSING=true
ENABLE_GATE_UPGRADES=true
ENABLE_WEIGHT_BALANCE_CHECK=true
ENABLE_DOOR_CLOSURE_COORDINATION=true
DOOR_CLOSURE_WARNING_MINUTES=10

# Boarding Analytics
ENABLE_BOARDING_ANALYTICS=true
TRACK_BOARDING_SPEED=true
TRACK_ZONE_EFFECTIVENESS=true
TRACK_BOTTLENECKS=true
ANALYTICS_SAMPLING_RATE=1.0

# Performance Targets
TARGET_BOARDING_TIME_MINUTES=25
TARGET_PASSENGERS_PER_MINUTE=8
EARLY_BOARDING_MINUTES=40
FINAL_CALL_MINUTES=15

# Operational Messaging
ENABLE_GATE_STATUS_MESSAGES=true
ENABLE_BOARDING_NOTIFICATIONS=true
ENABLE_DEPARTURE_MESSAGES=true
ENABLE_NO_SHOW_PROCESSING=true
ENABLE_OFFLOAD_COORDINATION=true

# Display Integration
ENABLE_GATE_DISPLAYS=true
GATE_DISPLAY_REFRESH_RATE_MS=5000
ENABLE_PASSENGER_NOTIFICATIONS=true
ENABLE_QUEUE_DISPLAYS=true
DISPLAY_LANGUAGE=en,es,fr,de,zh,ja,ar

# Biometric Boarding
ENABLE_BIOMETRIC_BOARDING=false
BIOMETRIC_PROVIDER=vision_box
BIOMETRIC_CONFIDENCE_THRESHOLD=0.95
ENABLE_TOUCHLESS_BOARDING=false
ENABLE_DOCUMENT_VERIFICATION=true
BIOMETRIC_FALLBACK_ENABLED=true

# Special Handling
ENABLE_WHEELCHAIR_COORDINATION=true
WHEELCHAIR_PREBOARD=true
ENABLE_UMNR_TRACKING=true
UMNR_HANDOFF_REQUIRED=true
ENABLE_VIP_HANDLING=true
VIP_PREBOARD=true

# Barcode Scanning
SUPPORTED_BARCODE_FORMATS=PDF417,QR_CODE,CODE_128,AZTEC
ENABLE_1D_BARCODES=true
ENABLE_2D_BARCODES=true
IATA_BCBP_FORMAT_VERSION=M
BARCODE_VALIDATION_STRICT=true

# Hardware Integration
ENABLE_BOARDING_SCANNERS=true
SCANNER_TYPE=zebra,honeywell,datalogic
ENABLE_GATE_DISPLAYS=true
DISPLAY_PROTOCOL=http,websocket
ENABLE_BIOMETRIC_CAMERAS=false
CAMERA_RESOLUTION=1080p
ENABLE_DOOR_SENSORS=false

# No-Show Processing
ENABLE_AUTO_NO_SHOW=true
NO_SHOW_CUTOFF_MINUTES=15
NO_SHOW_OFFLOAD_BAGGAGE=true
NO_SHOW_NOTIFICATION=true

# Standby Clearance
ENABLE_AUTO_STANDBY_CLEAR=true
STANDBY_CUTOFF_MINUTES=10
STANDBY_PRIORITY_ORDER=status,checkin_time

# Flight Closure
ENABLE_AUTO_FLIGHT_CLOSE=false
AUTO_CLOSE_MINUTES_BEFORE=5
REQUIRE_FULL_MANIFEST=true
REQUIRE_WEIGHT_BALANCE=true
REQUIRE_ALL_BOARDED=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=500

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3009
CORS_CREDENTIALS=true

# Analytics
ENABLE_ANALYTICS=true
ANALYTICS_PROVIDER=prometheus
TRACK_BOARDING_METRICS=true
TRACK_SCAN_PERFORMANCE=true
TRACK_GATE_OPERATIONS=true

# Security
ENABLE_HELMET=true
ENABLE_RATE_LIMITING=true
ENABLE_AUDIT_LOG=true
AUDIT_LOG_RETENTION_DAYS=365
LOG_ALL_SCANS=true

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9011
ENABLE_HEALTH_CHECK=true
HEALTH_CHECK_PATH=/health

# Logging
LOG_LEVEL=info
LOG_DIR=logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d
LOG_BOARDING_EVENTS=true
LOG_GATE_OPERATIONS=true
LOG_SCAN_TRANSACTIONS=true

# Feature Flags
FEATURE_ZONE_BOARDING=true
FEATURE_BIOMETRIC_BOARDING=false
FEATURE_TOUCHLESS_BOARDING=false
FEATURE_GATE_UPGRADES=true
FEATURE_STANDBY_AUTO_CLEAR=true
FEATURE_REAL_TIME_ANALYTICS=true
FEATURE_PREDICTIVE_BOARDING=false

# Boarding Optimization
ENABLE_BOARDING_OPTIMIZATION=true
OPTIMIZE_ZONE_SEQUENCE=true
ENABLE_DYNAMIC_ZONES=false
ENABLE_PREDICTIVE_FLOW=false
MACHINE_LEARNING_ENABLED=false

# Integration
FLIGHT_INFO_PROVIDER=internal
WEATHER_DATA_ENABLED=false
ATC_INTEGRATION=false
GROUND_HANDLING_INTEGRATION=false
