{
  "name": "@airline-ops/airport-integration-service",
  "version": "1.0.0",
  "description": "Airport operational systems integration for common-use platforms, baggage handling, biometrics, FIDS, gate management, and SITA messaging",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=integration",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "worker:bhs": "ts-node src/workers/baggage-handler.ts",
    "worker:fids": "ts-node src/workers/fids-updater.ts",
    "worker:aodb": "ts-node src/workers/aodb-sync.ts",
    "worker:messaging": "ts-node src/workers/sita-messaging.ts",
    "sync:gates": "ts-node src/services/sync/gate-sync.ts",
    "sync:flights": "ts-node src/services/sync/flight-sync.ts",
    "monitor:health": "ts-node src/monitoring/airport-health.ts",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
