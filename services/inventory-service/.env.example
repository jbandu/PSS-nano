# Server Configuration
NODE_ENV=development
PORT=3003
SERVICE_NAME=inventory-service

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/airline_ops?schema=public"

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1
REDIS_KEY_PREFIX=inv:
REDIS_DEFAULT_TTL=300

# RabbitMQ Configuration
RABBITMQ_URL=amqp://guest:guest@localhost:5672
RABBITMQ_EXCHANGE=airline_events
RABBITMQ_QUEUE_INVENTORY=inventory_updates
RABBITMQ_QUEUE_LOW_INVENTORY=low_inventory_alerts

# Cache Configuration
CACHE_ENABLED=true
CACHE_HIT_RATE_TARGET=0.85
CACHE_AVAILABILITY_TTL=300
CACHE_SCHEDULE_TTL=3600
CACHE_INVENTORY_TTL=60

# Inventory Configuration
INVENTORY_LOCK_DURATION=300
OVERBOOKING_ENABLED=true
OVERBOOKING_DEFAULT_PERCENTAGE=10
LOW_INVENTORY_THRESHOLD=5
INVENTORY_SYNC_INTERVAL=60000

# Performance Configuration
QUERY_TIMEOUT=500
CACHE_QUERY_TIMEOUT=100
MAX_CONCURRENT_SEARCHES=100
SEARCH_DATE_RANGE_DAYS=3

# Business Rules
ADVANCE_PURCHASE_MIN_DAYS=0
ADVANCE_PURCHASE_MAX_DAYS=365
BOOKING_WINDOW_MIN_HOURS=2
MAX_STAY_DAYS=365

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
SEARCH_RATE_LIMIT_MAX=30

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=info
LOG_DIR=logs

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9003

# Webhooks
WEBHOOK_LOW_INVENTORY_URL=
WEBHOOK_TIMEOUT=5000
WEBHOOK_RETRY_COUNT=3
