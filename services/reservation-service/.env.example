# Server Configuration
NODE_ENV=development
PORT=3002
SERVICE_NAME=reservation-service

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/airline_ops?schema=public"

# Redis (Shopping Cart)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=2
REDIS_KEY_PREFIX=cart:
CART_TTL=1800

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672
RABBITMQ_EXCHANGE=airline_events
RABBITMQ_QUEUE_BOOKINGS=booking_events

# External Services
INVENTORY_SERVICE_URL=http://localhost:3003
PAYMENT_SERVICE_URL=http://localhost:3004
NOTIFICATION_SERVICE_URL=http://localhost:3005
AUTH_SERVICE_URL=http://localhost:3001

# Business Rules
MAX_PASSENGERS_PER_PNR=9
MIN_GROUP_PASSENGERS=10
MAX_INFANTS_PER_ADULT=1
UNACCOMPANIED_MINOR_MIN_AGE=5
UNACCOMPANIED_MINOR_MAX_AGE=11
PASSPORT_MIN_VALIDITY_MONTHS=6
ADVANCE_PURCHASE_MIN_HOURS=2
MAX_BOOKING_DAYS_ADVANCE=365

# Performance Targets
BOOKING_TIMEOUT=3000
CART_OPERATION_TIMEOUT=100
PNR_RETRIEVAL_TIMEOUT=200
PRICE_CALCULATION_TIMEOUT=500
MODIFICATION_TIMEOUT=2000
MAX_CONCURRENT_BOOKINGS=100

# PNR Configuration
PNR_LENGTH=6
PNR_CHARACTERS=ABCDEFGHJKLMNPQRSTUVWXYZ23456789
PNR_RETRY_ATTEMPTS=3

# Payment Integration
PAYMENT_GATEWAY_TIMEOUT=5000
PAYMENT_RETRY_ATTEMPTS=2

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
BOOKING_RATE_LIMIT_MAX=10

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=info
LOG_DIR=logs

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9002

# Feature Flags
ENABLE_CART_RECOVERY=true
ENABLE_PROFILE_INTEGRATION=true
ENABLE_GROUP_BOOKINGS=true
ENABLE_PNR_SPLITTING=true
