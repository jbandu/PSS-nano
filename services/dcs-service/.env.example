# Server Configuration
NODE_ENV=development
PORT=3010
SERVICE_NAME=dcs-service

# Database
DATABASE_URL="postgresql://neondb_owner:npg_kp4AVvbJxf9i@ep-steep-rain-a49rnsg4-pooler.us-east-1.aws.neon.tech/neondb?sslmode=require&channel_binding=require&schema=public"

# Database (Local Development - Optional)
# DATABASE_URL="postgresql://user:password@localhost:5432/airline_ops?schema=public"

# Redis (Cache & Real-time)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=7
REDIS_KEY_PREFIX=dcs:

# Socket.io (Real-time Updates)
SOCKET_IO_PORT=3011
SOCKET_IO_CORS_ORIGIN=http://localhost:3009
ENABLE_SOCKET_IO=true
SOCKET_IO_PING_TIMEOUT=60000
SOCKET_IO_PING_INTERVAL=25000

# External Service URLs
RESERVATION_SERVICE_URL=http://localhost:3002
INVENTORY_SERVICE_URL=http://localhost:3003
ANCILLARY_SERVICE_URL=http://localhost:3006
PAYMENT_SERVICE_URL=http://localhost:3005

# Check-in Configuration
CHECK_IN_OPEN_HOURS=24
CHECK_IN_CLOSE_MINUTES=45
ENABLE_WEB_CHECK_IN=true
ENABLE_MOBILE_CHECK_IN=true
ENABLE_KIOSK_CHECK_IN=true
ENABLE_AGENT_CHECK_IN=true
MAX_PASSENGERS_PER_TRANSACTION=9
CHECK_IN_TIMEOUT_SECONDS=300

# Seat Assignment
ENABLE_AUTO_SEAT_ASSIGNMENT=true
SEAT_MAP_CACHE_TTL=60
ENABLE_PREFERRED_SEATING=true
ENABLE_SEAT_BLOCKING=true
BLOCK_SEAT_DURATION_MINUTES=5

# Baggage Configuration
ENABLE_BAGGAGE_TRACKING=true
BAG_TAG_NUMBER_PREFIX=AA
BAG_TAG_NUMBER_LENGTH=10
ENABLE_IATA_BSM=true
BSM_VERSION=1.6
BAGGAGE_ALLOWANCE_ECONOMY=2
BAGGAGE_ALLOWANCE_PREMIUM=3
BAGGAGE_ALLOWANCE_BUSINESS=3
BAGGAGE_ALLOWANCE_FIRST=4
MAX_BAG_WEIGHT_KG=23
MAX_BAG_WEIGHT_LBS=50
ENABLE_HEAVY_BAG_FEE=true
HEAVY_BAG_FEE_USD=100

# Bag Tag Printing
ENABLE_BAG_TAG_PRINTING=true
BAG_TAG_PRINTER_TYPE=thermal
BAG_TAG_BARCODE_TYPE=PDF417
BAG_TAG_PAPER_SIZE=4x6
ENABLE_PRINT_QUEUE=true
PRINTER_DPI=300

# Boarding Pass Configuration
BOARDING_PASS_BARCODE_TYPE=PDF417
BOARDING_PASS_STANDARD=IATA_BCBP
BOARDING_PASS_FORMAT_VERSION=M
ENABLE_MOBILE_BOARDING_PASS=true
ENABLE_PAPER_BOARDING_PASS=true
BOARDING_PASS_EXPIRY_HOURS=24

# APIS (Advance Passenger Information System)
ENABLE_APIS=true
APIS_REQUIRED_ROUTES=US,CA,GB,AU,NZ
APIS_MANDATORY_FIELDS=documentType,documentNumber,issuingCountry,nationality,dateOfBirth,gender,expiryDate
ENABLE_PASSPORT_SCANNING=true
ENABLE_OCR=true
OCR_PROVIDER=tesseract
ENABLE_TIMATIC_VALIDATION=true
TIMATIC_API_URL=https://timatic.example.com
TIMATIC_API_KEY=

# Government Systems Integration
ENABLE_SECURE_FLIGHT=true
SECURE_FLIGHT_ENDPOINT=https://dhs.gov/secureflightapi
ENABLE_CARICOM_IMPACS=true
IMPACS_ENDPOINT=https://caricom.org/impacs
ENABLE_CUSTOMS_DECLARATION=true
ENABLE_IMMIGRATION_PRECLEARANCE=true

# Watchlist Screening
ENABLE_WATCHLIST_SCREENING=true
WATCHLIST_PROVIDER=internal
ENABLE_NO_FLY_LIST=true
ENABLE_SELECTEE_LIST=true
SCREENING_TIMEOUT_MS=2000
AUTO_CLEAR_THRESHOLD=95

# Special Service Requests (SSR)
ENABLE_SSR=true
SUPPORTED_SSR_CODES=WCHR,WCHC,WCHS,WCBD,WCBW,WCMP,BLND,DEAF,UMNR,PETC,AVIH,DPNA,MEDA,OTHS
ENABLE_SSR_VALIDATION=true
ENABLE_SSR_FORWARDING=true

# Payment Processing
ENABLE_CHECK_IN_PAYMENTS=true
ACCEPTED_PAYMENT_METHODS=card,cash,voucher
ENABLE_BAGGAGE_FEES=true
ENABLE_SEAT_FEES=true
ENABLE_UPGRADE_FEES=true
ENABLE_ANCILLARY_SALES=true
PAYMENT_TIMEOUT_SECONDS=120

# Agent Authentication
ENABLE_AGENT_SSO=false
SSO_PROVIDER=okta
SSO_CLIENT_ID=
SSO_CLIENT_SECRET=
AGENT_SESSION_TIMEOUT_MINUTES=480
ENABLE_AGENT_BIOMETRIC=false

# Agent Permissions
ROLE_AGENT=check_in,seat_assignment,baggage,boarding_pass,payment
ROLE_SUPERVISOR=check_in,seat_assignment,baggage,boarding_pass,payment,override,refund,upgrade
ROLE_GATE_AGENT=boarding_pass,load_control,close_flight
ROLE_ADMIN=*

# Multi-tasking
ENABLE_MULTI_TASKING=true
MAX_CONCURRENT_TRANSACTIONS=5
ENABLE_TRANSACTION_QUEUE=true
TRANSACTION_PRIORITY_LEVELS=urgent,high,normal,low

# Load Control
ENABLE_LOAD_CONTROL=true
LOAD_SHEET_FORMAT=IATA_LIR
ENABLE_WEIGHT_BALANCE=true
ENABLE_DANGEROUS_GOODS=true
DANGEROUS_GOODS_CLASSES=1,2,3,4,5,6,7,8,9

# Flight Close-out
ENABLE_AUTO_CLOSE=false
AUTO_CLOSE_MINUTES_BEFORE=10
REQUIRE_FINAL_MANIFEST=true
REQUIRE_LOAD_SHEET=true
REQUIRE_APIS_COMPLETE=true
ENABLE_LATE_CHECK_IN_OVERRIDE=true

# Standby Management
ENABLE_STANDBY_LIST=true
STANDBY_PRIORITY_ORDER=status,checkin_time
ENABLE_AUTO_STANDBY_CLEAR=true
STANDBY_CUTOFF_MINUTES=15

# Disruption Management
ENABLE_INVOLUNTARY_REROUTE=true
ENABLE_DOWNGRADE_COMPENSATION=true
ENABLE_UPGRADE_PROCESSING=true
ENABLE_VOLUNTARY_DENIED_BOARDING=true
COMPENSATION_CURRENCY=USD

# Notifications
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=true
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=

# Kiosk Integration
ENABLE_KIOSK=true
KIOSK_MODE=self_service
KIOSK_TIMEOUT_SECONDS=120
KIOSK_LANGUAGE_OPTIONS=en,es,fr,de,zh,ja,ko,ar
ENABLE_KIOSK_PASSPORT_SCAN=true
ENABLE_KIOSK_PAYMENT=true

# Offline Mode
ENABLE_OFFLINE_MODE=true
OFFLINE_CACHE_DURATION_MINUTES=60
ENABLE_OFFLINE_SYNC=true
SYNC_INTERVAL_SECONDS=30

# Performance Monitoring
TARGET_CHECK_IN_TIME_SECONDS=5
TARGET_SEAT_MAP_LOAD_TIME_MS=500
TARGET_PASSENGER_LOOKUP_TIME_MS=1000
TARGET_CONCURRENT_AGENTS=100
ENABLE_PERFORMANCE_METRICS=true

# Reporting
ENABLE_SHIFT_REPORTS=true
ENABLE_AGENT_PRODUCTIVITY=true
ENABLE_CHECK_IN_ANALYTICS=true
REPORT_RETENTION_DAYS=90

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# CORS
CORS_ORIGIN=http://localhost:3009,http://localhost:3000
CORS_CREDENTIALS=true

# Analytics
ENABLE_ANALYTICS=true
TRACK_CHECK_IN_TIME=true
TRACK_AGENT_PERFORMANCE=true
TRACK_TRANSACTION_ERRORS=true

# Security
ENABLE_HELMET=true
ENABLE_RATE_LIMITING=true
ENABLE_AUDIT_LOG=true
AUDIT_LOG_RETENTION_DAYS=730
LOG_PII_ACCESS=true

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9010
ENABLE_HEALTH_CHECK=true
HEALTH_CHECK_PATH=/health

# Logging
LOG_LEVEL=info
LOG_DIR=logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d
LOG_CHECK_IN_TRANSACTIONS=true
LOG_BAGGAGE_OPERATIONS=true
LOG_APIS_SUBMISSIONS=true

# Feature Flags
FEATURE_SEAT_SELECTION=true
FEATURE_BAGGAGE_DROP=true
FEATURE_APIS_COLLECTION=true
FEATURE_PAYMENT_COLLECTION=true
FEATURE_SSR_HANDLING=true
FEATURE_STANDBY_PROCESSING=true
FEATURE_LOAD_CONTROL=true
FEATURE_UPGRADE_PROCESSING=true
FEATURE_GROUP_CHECK_IN=true

# Integration Testing
TEST_MODE=false
MOCK_GOVERNMENT_APIS=false
MOCK_PAYMENT_GATEWAY=false
