{
  "name": "@airline-ops/notification-service",
  "version": "1.0.0",
  "description": "Multi-channel notification service for email, SMS, push, WhatsApp, voice, and in-app messaging",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=integration",
    "db:generate": "prisma generate",
    "db:push": "prisma db:push",
    "db:migrate": "prisma migrate dev",
    "worker:email": "ts-node src/workers/email-worker.ts",
    "worker:sms": "ts-node src/workers/sms-worker.ts",
    "worker:push": "ts-node src/workers/push-worker.ts",
    "worker:whatsapp": "ts-node src/workers/whatsapp-worker.ts",
    "worker:voice": "ts-node src/workers/voice-worker.ts",
    "worker:scheduler": "ts-node src/workers/scheduler-worker.ts",
    "analytics:generate": "ts-node src/services/analytics/generate-report.ts",
    "templates:sync": "ts-node src/services/templates/sync-templates.ts",
    "monitor:health": "ts-node src/monitoring/notification-health.ts",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "express": "^4.18.2",
    "@prisma/client": "^5.8.1",
