# Application Configuration
APP_NAME=Mobile Agent App
APP_ENV=development
APP_VERSION=1.0.0

# API Configuration
API_BASE_URL=http://localhost:3010
DCS_SERVICE_URL=http://localhost:3010/api/v1
SOCKET_IO_URL=http://localhost:3011
API_TIMEOUT=30000

# Authentication
SESSION_TIMEOUT_MINUTES=5
ENABLE_BIOMETRIC_AUTH=true
REQUIRE_PIN_FALLBACK=true

# Hardware Configuration
ENABLE_BLUETOOTH_SCANNER=true
ENABLE_BLUETOOTH_PRINTER=true
ENABLE_STRIPE_TERMINAL=true
ENABLE_CAMERA_OCR=true

# Bluetooth Scanner Settings
SCANNER_AUTO_CONNECT=true
SCANNER_TIMEOUT_MS=10000
SUPPORTED_SCANNERS=Zebra,Honeywell,Socket,Linea

# Bluetooth Printer Settings
PRINTER_AUTO_CONNECT=false
PRINTER_TIMEOUT_MS=15000
SUPPORTED_PRINTERS=Zebra,APG,Star,Boca
BAG_TAG_TEMPLATE=iata_standard
BOARDING_PASS_TEMPLATE=iata_bcbp

# Stripe Terminal
STRIPE_PUBLISHABLE_KEY=pk_test_
STRIPE_TERMINAL_LOCATION_ID=
STRIPE_READER_AUTO_CONNECT=false
ENABLE_CONTACTLESS_PAYMENT=true
ENABLE_CHIP_PAYMENT=true
ENABLE_SWIPE_PAYMENT=false

# Camera & OCR
CAMERA_QUALITY=high
ENABLE_PASSPORT_SCAN=true
OCR_LANGUAGE=eng
OCR_CONFIDENCE_THRESHOLD=0.85
ENABLE_MANUAL_CORRECTION=true

# Check-in Settings
TARGET_CHECKIN_TIME_SECONDS=30
ENABLE_QUICK_ASSIGN=true
ENABLE_AUTO_SEAT_ASSIGNMENT=true
ENABLE_GROUP_CHECKIN=true
MAX_PASSENGERS_PER_TRANSACTION=9

# Baggage Settings
ENABLE_MOBILE_BAG_TAG=true
ENABLE_PRE_TAG=true
ENABLE_SCALE_INTEGRATION=true
MAX_BAGS_PER_PASSENGER=10
ENABLE_EXCESS_BAGGAGE_PAYMENT=true

# APIS Settings
ENABLE_APIS_COLLECTION=true
APIS_REQUIRED_ROUTES=US,CA,GB,AU,NZ
ENABLE_TIMATIC_VALIDATION=true
TIMATIC_API_URL=
TIMATIC_API_KEY=

# Ancillary Sales
ENABLE_ANCILLARY_UPSELL=true
ENABLE_CONTEXTUAL_OFFERS=true
ENABLE_GATE_UPGRADES=true
ENABLE_LOUNGE_SALES=true
ENABLE_PRIORITY_BOARDING_SALES=true
UPSELL_MINIMUM_MARGIN=0.15

# Queue Management
ENABLE_QUEUE_MANAGEMENT=true
ENABLE_ROAMING_CHECKIN=true
ENABLE_CURBSIDE_CHECKIN=true
ENABLE_HOTEL_LOBBY_CHECKIN=true
ENABLE_GATE_PROCESSING=true

# Offline Mode
ENABLE_OFFLINE_MODE=true
OFFLINE_CACHE_DURATION_HOURS=8
CACHE_FLIGHT_MANIFESTS=true
CACHE_SEAT_MAPS=true
CACHE_PASSENGER_PROFILES=true
MAX_OFFLINE_TRANSACTIONS=100
SYNC_INTERVAL_SECONDS=30

# Performance
ENABLE_PERFORMANCE_MONITORING=true
TARGET_APP_LAUNCH_TIME_MS=2000
TARGET_LOOKUP_TIME_MS=1000
ENABLE_BATTERY_OPTIMIZATION=true
TARGET_SHIFT_BATTERY_HOURS=8

# Security
ENABLE_REMOTE_WIPE=true
ENABLE_ENCRYPTED_STORAGE=true
ENABLE_SSL_PINNING=true
SESSION_ENCRYPTION_KEY=
REQUIRE_DEVICE_ENCRYPTION=true
ENABLE_SCREENSHOT_BLOCKING=true

# Logging & Analytics
LOG_LEVEL=info
ENABLE_CRASH_REPORTING=true
ENABLE_ANALYTICS=true
ANALYTICS_ENDPOINT=
SENTRY_DSN=

# Feature Flags
FEATURE_BLUETOOTH_SCANNER=true
FEATURE_BLUETOOTH_PRINTER=true
FEATURE_MOBILE_PAYMENT=true
FEATURE_PASSPORT_SCAN=true
FEATURE_OFFLINE_MODE=true
FEATURE_ANCILLARY_SALES=true
FEATURE_QUEUE_MANAGEMENT=true
FEATURE_STANDBY_MANAGEMENT=true

# Regional Settings
DEFAULT_CURRENCY=USD
DEFAULT_WEIGHT_UNIT=KG
DEFAULT_LOCALE=en-US
SUPPORTED_LOCALES=en,es,fr,de,zh,ja,ko,ar

# Testing
ENABLE_DEV_MENU=false
ENABLE_MOCK_HARDWARE=false
MOCK_SCANNER_DATA=true
MOCK_PRINTER=true
MOCK_PAYMENT_TERMINAL=true
