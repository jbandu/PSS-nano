# Application
NEXT_PUBLIC_APP_NAME=Agent Portal
NEXT_PUBLIC_APP_VERSION=1.0.0
NODE_ENV=development

# API Configuration
NEXT_PUBLIC_DCS_SERVICE_URL=http://localhost:3010
NEXT_PUBLIC_SOCKET_IO_URL=http://localhost:3011
NEXT_PUBLIC_API_TIMEOUT=30000

# Authentication
NEXT_PUBLIC_ENABLE_SSO=false
NEXT_PUBLIC_SESSION_TIMEOUT=28800000
NEXT_PUBLIC_IDLE_TIMEOUT=1800000

# Agent Features
NEXT_PUBLIC_ENABLE_MULTI_TASKING=true
NEXT_PUBLIC_MAX_CONCURRENT_PNRS=5
NEXT_PUBLIC_ENABLE_QUICK_CHECK_IN=true
NEXT_PUBLIC_ENABLE_GROUP_CHECK_IN=true

# Seat Map
NEXT_PUBLIC_SEAT_MAP_REFRESH_INTERVAL=5000
NEXT_PUBLIC_ENABLE_SEAT_BLOCKING=true
NEXT_PUBLIC_SEAT_BLOCK_DURATION=300000

# Baggage
NEXT_PUBLIC_ENABLE_BAGGAGE_TRACKING=true
NEXT_PUBLIC_ENABLE_BAG_TAG_PRINTING=true
NEXT_PUBLIC_MAX_BAGS_PER_PASSENGER=10

# APIS
NEXT_PUBLIC_ENABLE_APIS=true
NEXT_PUBLIC_ENABLE_PASSPORT_SCAN=true
NEXT_PUBLIC_APIS_REQUIRED_ROUTES=US,CA,GB,AU,NZ

# Payment
NEXT_PUBLIC_ENABLE_PAYMENTS=true
NEXT_PUBLIC_ACCEPTED_PAYMENT_METHODS=card,cash,voucher
NEXT_PUBLIC_PAYMENT_TIMEOUT=120000

# Printing
NEXT_PUBLIC_ENABLE_BOARDING_PASS_PRINT=true
NEXT_PUBLIC_ENABLE_BAG_TAG_PRINT=true
NEXT_PUBLIC_DEFAULT_PRINTER=

# Performance
NEXT_PUBLIC_TARGET_CHECK_IN_TIME=5000
NEXT_PUBLIC_ENABLE_PERFORMANCE_TRACKING=true

# Offline Mode
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true
NEXT_PUBLIC_OFFLINE_CACHE_DURATION=3600000

# UI Configuration
NEXT_PUBLIC_THEME=light
NEXT_PUBLIC_ENABLE_DARK_MODE=false
NEXT_PUBLIC_DEFAULT_LANGUAGE=en

# Notifications
NEXT_PUBLIC_ENABLE_SOUND_ALERTS=true
NEXT_PUBLIC_ENABLE_TOAST_NOTIFICATIONS=true
NEXT_PUBLIC_NOTIFICATION_DURATION=5000

# Analytics
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ANALYTICS_ID=

# Feature Flags
NEXT_PUBLIC_FEATURE_SEAT_SELECTION=true
NEXT_PUBLIC_FEATURE_BAGGAGE_DROP=true
NEXT_PUBLIC_FEATURE_APIS_COLLECTION=true
NEXT_PUBLIC_FEATURE_PAYMENT_COLLECTION=true
NEXT_PUBLIC_FEATURE_SSR_HANDLING=true
NEXT_PUBLIC_FEATURE_STANDBY=true
NEXT_PUBLIC_FEATURE_UPGRADE=true
NEXT_PUBLIC_FEATURE_LOAD_CONTROL=false

# Development
NEXT_PUBLIC_DEBUG=false
NEXT_PUBLIC_MOCK_API=false
