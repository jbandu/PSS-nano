# App Configuration
APP_NAME=Airline Ops
APP_VERSION=1.0.0
APP_BUILD_NUMBER=1
ENVIRONMENT=development

# API Configuration
API_BASE_URL=https://api.airline-ops.com
API_TIMEOUT=30000
API_VERSION=v1

# Service URLs
AUTH_SERVICE_URL=https://api.airline-ops.com/api/v1/auth
BOOKING_SERVICE_URL=https://api.airline-ops.com/api/v1/bookings
CHECKIN_SERVICE_URL=https://api.airline-ops.com/api/v1/checkin
PAYMENT_SERVICE_URL=https://api.airline-ops.com/api/v1/payments

# Firebase Configuration
FIREBASE_IOS_APP_ID=1:1234567890:ios:abcdef1234567890
FIREBASE_ANDROID_APP_ID=1:1234567890:android:abcdef1234567890
FIREBASE_API_KEY=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
FIREBASE_AUTH_DOMAIN=airline-ops.firebaseapp.com
FIREBASE_PROJECT_ID=airline-ops
FIREBASE_STORAGE_BUCKET=airline-ops.appspot.com
FIREBASE_MESSAGING_SENDER_ID=1234567890
FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Push Notifications
FCM_SERVER_KEY=AAAA-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
ENABLE_PUSH_NOTIFICATIONS=true
NOTIFICATION_CHANNEL_ID=airline_ops_notifications
NOTIFICATION_CHANNEL_NAME=Flight Updates

# Biometric Authentication
ENABLE_BIOMETRIC_AUTH=true
BIOMETRIC_PROMPT_TITLE=Authenticate
BIOMETRIC_PROMPT_DESCRIPTION=Use your biometric to login
FALLBACK_TO_PIN=true

# Offline Mode
ENABLE_OFFLINE_MODE=true
OFFLINE_CACHE_SIZE_MB=50
OFFLINE_CACHE_EXPIRY_DAYS=7

# Boarding Pass
BARCODE_TYPE=PDF417
BARCODE_STANDARD=IATA_BCBP
ENABLE_WALLET_INTEGRATION=true
AUTO_BRIGHTNESS_FOR_SCANNER=true

# Analytics
ENABLE_ANALYTICS=true
ANALYTICS_DEBUG_MODE=false
TRACK_SCREEN_VIEWS=true
TRACK_USER_PROPERTIES=true

# Feature Flags
FEATURE_CHECKIN=true
FEATURE_SEAT_SELECTION=true
FEATURE_ANCILLARIES=true
FEATURE_BIOMETRIC_LOGIN=true
FEATURE_OFFLINE_MODE=true
FEATURE_PUSH_NOTIFICATIONS=true
FEATURE_CAMERA_SCAN=true
FEATURE_LOCATION_SERVICES=false
FEATURE_CALENDAR_INTEGRATION=true

# Performance
MAX_CONCURRENT_REQUESTS=5
IMAGE_CACHE_SIZE_MB=100
ENABLE_HERMES=true
ENABLE_FABRIC=true

# Security
ENABLE_SSL_PINNING=true
CERTIFICATE_HASH=sha256/XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
ENABLE_ROOT_DETECTION=true
ENABLE_JAILBREAK_DETECTION=true
ENABLE_SCREENSHOT_PROTECTION=false

# Storage
SECURE_STORAGE_KEY=airline_ops_secure
MMKV_ENCRYPTION_KEY=CHANGE_ME_32_BYTE_KEY_HERE
ASYNC_STORAGE_SIZE_MB=10

# Localization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,zh,ja,ko,ar,he,ru
RTL_LANGUAGES=ar,he

# Deep Linking
DEEP_LINK_SCHEME=airlineops
UNIVERSAL_LINK_DOMAIN=app.airline-ops.com
ANDROID_PACKAGE_NAME=com.airlineops.mobile
IOS_BUNDLE_ID=com.airlineops.mobile

# Map & Location
ENABLE_LOCATION_TRACKING=false
LOCATION_PERMISSION_REQUIRED=false
AIRPORT_GEOFENCE_RADIUS_METERS=1000

# Camera
CAMERA_QUALITY=high
ENABLE_DOCUMENT_SCANNING=true
MAX_DOCUMENT_SIZE_MB=5

# Network
RETRY_ATTEMPTS=3
RETRY_DELAY_MS=1000
ENABLE_REQUEST_CACHING=true
CACHE_DURATION_SECONDS=300

# Logging
LOG_LEVEL=info
ENABLE_REMOTE_LOGGING=false
LOG_RETENTION_DAYS=7

# App Store / Play Store
IOS_APP_ID=1234567890
ANDROID_APP_ID=com.airlineops.mobile
FORCE_UPDATE_VERSION=1.0.0

# Support
SUPPORT_EMAIL=support@airline-ops.com
SUPPORT_PHONE=+1-800-AIRLINE
FAQ_URL=https://airline-ops.com/faq
TERMS_URL=https://airline-ops.com/terms
PRIVACY_URL=https://airline-ops.com/privacy
