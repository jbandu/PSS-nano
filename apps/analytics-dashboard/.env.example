# Analytics Service API
NEXT_PUBLIC_ANALYTICS_API_URL=http://localhost:3015/api/v1
ANALYTICS_API_KEY=your-api-key-here

# Authentication
NEXT_PUBLIC_AUTH_ENABLED=true
NEXTAUTH_URL=http://localhost:3016
NEXTAUTH_SECRET=your-secret-key-here
JWT_SECRET=your-jwt-secret

# Features
NEXT_PUBLIC_ENABLE_SELF_SERVICE=true
NEXT_PUBLIC_ENABLE_SCHEDULED_REPORTS=true
NEXT_PUBLIC_ENABLE_PREDICTIVE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_MOBILE_APP=true
NEXT_PUBLIC_ENABLE_AD_HOC_QUERIES=true
NEXT_PUBLIC_ENABLE_DATA_CATALOG=true

# Export Configuration
NEXT_PUBLIC_MAX_EXPORT_ROWS=100000
NEXT_PUBLIC_EXPORT_STORAGE=local
# Options: local, s3, azure_blob
AWS_S3_BUCKET=analytics-exports
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# Performance
NEXT_PUBLIC_CACHE_TTL_MINUTES=15
NEXT_PUBLIC_QUERY_TIMEOUT_SECONDS=60
NEXT_PUBLIC_MAX_QUERY_ROWS=10000
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=50

# Scheduled Reports
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=analytics@airline.com

# Monitoring
NEXT_PUBLIC_ENABLE_ANALYTICS_TRACKING=true
GOOGLE_ANALYTICS_ID=
SENTRY_DSN=

# Real-time Updates
NEXT_PUBLIC_ENABLE_REALTIME=true
WEBSOCKET_URL=ws://localhost:3015/ws

# Predictive Analytics
ML_API_URL=http://localhost:3017/api/v1
ML_API_KEY=

# Mobile App
MOBILE_APP_STORE_URL=
MOBILE_PLAY_STORE_URL=
PUSH_NOTIFICATION_KEY=

# Branding
NEXT_PUBLIC_COMPANY_NAME=Airline Operations
NEXT_PUBLIC_COMPANY_LOGO=/logo.png
NEXT_PUBLIC_PRIMARY_COLOR=#1E40AF
NEXT_PUBLIC_SECONDARY_COLOR=#10B981
