# Application
NEXT_PUBLIC_APP_NAME=Airline Ops Booking Engine
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# API Endpoints
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_API_GATEWAY_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:3001

# Authentication
NEXT_PUBLIC_AUTH_SERVICE_URL=http://localhost:3001/api/v1/auth
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000

# Service URLs (for SSR)
INVENTORY_SERVICE_URL=http://localhost:3003/api/v1
RESERVATION_SERVICE_URL=http://localhost:3002/api/v1
PRICING_SERVICE_URL=http://localhost:3004/api/v1
ANCILLARY_SERVICE_URL=http://localhost:3005/api/v1
PAYMENT_SERVICE_URL=http://localhost:3006/api/v1

# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# Feature Flags
NEXT_PUBLIC_ENABLE_SEAT_SELECTION=true
NEXT_PUBLIC_ENABLE_ANCILLARIES=true
NEXT_PUBLIC_ENABLE_SPLIT_PAYMENT=true
NEXT_PUBLIC_ENABLE_PROFILE_AUTOFILL=true
NEXT_PUBLIC_ENABLE_CART_RECOVERY=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_PWA=true

# Cart Configuration
NEXT_PUBLIC_CART_EXPIRY_MINUTES=30
NEXT_PUBLIC_CART_WARNING_MINUTES=5
NEXT_PUBLIC_ENABLE_CART_PERSISTENCE=true

# Payment
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
NEXT_PUBLIC_PAYPAL_CLIENT_ID=xxxxx

# Search Defaults
NEXT_PUBLIC_DEFAULT_ORIGIN=LAX
NEXT_PUBLIC_DEFAULT_DESTINATION=JFK
NEXT_PUBLIC_MAX_PASSENGERS=9
NEXT_PUBLIC_SEARCH_RESULTS_PER_PAGE=20

# Performance
NEXT_PUBLIC_IMAGE_QUALITY=85
NEXT_PUBLIC_ENABLE_PREFETCH=true
NEXT_PUBLIC_ENABLE_SERVICE_WORKER=true

# Localization
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_DEFAULT_CURRENCY=USD
NEXT_PUBLIC_DEFAULT_DATE_FORMAT=MM/DD/YYYY

# Maps & External Services
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=
NEXT_PUBLIC_SENTRY_DSN=

# A/B Testing
NEXT_PUBLIC_ENABLE_AB_TESTING=false
NEXT_PUBLIC_VERCEL_EDGE_CONFIG=

# Development
NEXT_PUBLIC_ENABLE_DEVTOOLS=true
NEXT_PUBLIC_MOCK_API=false
NEXT_PUBLIC_LOG_LEVEL=info

# Build
BUILD_STANDALONE=false
ANALYZE=false

# Security
NEXT_PUBLIC_CSP_NONCE=
NEXT_PUBLIC_ENABLE_SECURITY_HEADERS=true
